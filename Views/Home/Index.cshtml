@model List<MaxsPetCare.Models.Gallery>
@{
    ViewBag.Title = "Home Page";
    ViewBag.Active_Home = "active";
}

<!-- ======= Hero Section ======= -->
<section id="hero" class="d-flex align-items-center">

    <div class="container">
        <div class="row">
            <div class="col-lg-6 pt-5 pt-lg-0 order-2 order-lg-1 d-flex flex-column justify-content-center">
                <h1 data-aos="fade-up">@AppInfo.AppName is all your want for your pet</h1>
                <h2 data-aos="fade-up" data-aos-delay="400">
                    "An animal's eyes have the power to speak a great language." not only love which you give them is enough.. Care also to be taken at right time. So we are here helping you out to sort few problems of your
                </h2>
                <div data-aos="fade-up" data-aos-delay="800">
                    <a href="#about" class="btn-get-started scrollto">Get Started</a>
                </div>
            </div>
            <div class="col-lg-6 order-1 order-lg-2 hero-img" data-aos="fade-left" data-aos-delay="200">
                <img src="~/Images/boy-and-dog-vector-3.png" class="img-fluid animated" alt="">
            </div>
        </div>
    </div>

</section><!-- End Hero -->

<main id="main">

    <!-- ======= About Us Section ======= -->
    <section id="about" class="about">
        <div class="container">

            <div class="section-title" data-aos="fade-up">
                <h2>About Us</h2>
            </div>

            <div class="row content">
                <div class="col-lg-6" data-aos="fade-up" data-aos-delay="150">
                    <p>
                        Max pet care is all you want for your pet . Being a pet lover  keep in mind to give a best for them. We provied you few services for your loving them
                    </p>
                    <ul>
                        <li><i class="ri-check-double-line"></i> Veterinary home consultancy</li>
                        <li><i class="ri-check-double-line"></i> Their behavior training and pet show training</li>
                        <li><i class="ri-check-double-line"></i> And we also asure you to keep your pet safe when u are out of station.</li>
                    </ul>
                </div>
                <div class="col-lg-6 pt-4 pt-lg-0" data-aos="fade-up" data-aos-delay="300">
                    <p>
                        Max pet care is all you want for your pet . Being a pet lover  keep in mind to give a best for them. We provied you few  services for  your loving them
                    </p>
                    <a href="@Url.Action("ContactUs")" class="btn-learn-more">Contact Us</a>
                </div>
            </div>

        </div>
    </section><!-- End About Us Section -->
    <!-- ======= Counts Section ======= -->
    <section id="counts" class="counts">
        <div class="container">

            <div class="row">
                <div class="image col-xl-5 d-flex align-items-stretch justify-content-center justify-content-xl-start" data-aos="fade-right" data-aos-delay="150">
                    <img src="~/Images/counts-img.svg" alt="" class="img-fluid">
                </div>

                <div class="col-xl-7 d-flex align-items-stretch pt-4 pt-xl-0" data-aos="fade-left" data-aos-delay="300">
                    <div class="content d-flex flex-column justify-content-center">
                        <div class="row">
                            <div class="col-md-6 d-md-flex align-items-md-stretch">
                                <div class="count-box">
                                    <i class="icofont-simple-smile"></i>
                                    <span data-toggle="counter-up">658</span>
                                    <p><strong>Dogs Cured</strong></p>
                                </div>
                            </div>

                            <div class="col-md-6 d-md-flex align-items-md-stretch">
                                <div class="count-box">
                                    <i class="icofont-simple-smile"></i>
                                    <span data-toggle="counter-up">865</span>
                                    <p><strong>Cats Cured</strong></p>
                                </div>
                            </div>

                            <div class="col-md-6 d-md-flex align-items-md-stretch">
                                <div class="count-box">
                                    <i class="icofont-clock-time"></i>
                                    <span data-toggle="counter-up">3</span>
                                    <p><strong>Years of experience</strong></p>
                                </div>
                            </div>

                            <div class="col-md-6 d-md-flex align-items-md-stretch">
                                <div class="count-box">
                                    <i class="icofont-award"></i>
                                    <span data-toggle="counter-up">464</span>
                                    <p><strong>Pets Trained</strong></p>
                                </div>
                            </div>
                        </div>
                    </div><!-- End .content-->
                </div>
            </div>

        </div>
    </section><!-- End Counts Section -->

    <!-- ======= Services Section ======= -->
    <section id="services" class="services">
        <div class="container">

            <div class="section-title" data-aos="fade-up">
                <h2>Services</h2>
            </div>

            <div class="row">
                <div class="col-md-6 col-lg-6 d-flex align-items-stretch mb-5 mb-lg-0">
                    <div class="icon-box" data-aos="fade-up" data-aos-delay="100">
                        <div class="icon"><i class='bx bx-calendar-star'></i></div>
                        <h4 class="title"><a href="@Url.Action("Consulting", "Home")">Pet consulting </a></h4>
                        <p class="description">
                            We believe that a caring atmosphere is as much a part of animal care as the veterinary practice. We strongly believe that scientific advancement in veterinary medicine is required to be put into clinical use, for the benefit of animals, and not merely be a topic for academic research.
                            <br />
                            It has been a life’s calling for us to make sure animals are healthy and their guardians happy. We derive great satisfaction from helping sick animals. So our doctor can help you reach your door step and treat your pet
                        </p>
                    </div>
                </div>

                <div class="col-md-6 col-lg-6 d-flex align-items-stretch mb-5 mb-lg-0">
                    <div class="icon-box" data-aos="fade-up" data-aos-delay="200">
                        <div class="icon"><i class='bx bx-street-view'></i></div>
                        <h4 class="title"><a href="@Url.Action("Training", "Home")">Pet Training</a></h4>
                        <p class="description">
                            A dog trainer is responsible for creating a training program to promote a dog's good behavior and for their show . They help dog owners train their dogs. A few of the main duties of a dog trainer are identifying problem behaviors, teaching the owner methods to train their dog, developing a training plan for the dog, and creating a welcoming environment. They also have to understand the owner and dog's needs.
                        </p>
                    </div>
                </div>

                <div class="col-md-12 col-lg-12 mt-5 mb-5 mb-lg-0">
                    <div class="icon-box" data-aos="fade-up" data-aos-delay="300">
                        <div class="icon"><i class='bx bxs-home-smile'></i></div>
                        <h4 class="title"><a href="@Url.Action("Boarding", "Home")">Pet boarding</a></h4>
                        <p class="description">
                            We offer quality pet boarding services
                            <ul>
                                <li>
                                    <i class="ri-check-double-line"></i> The pets are kept in a healthy environment with out keeping them in cages
                                </li>
                                <li>
                                    <i class="ri-check-double-line"></i> Branded and home cooked veg & Non Veg menu offered to Pets
                                </li>
                                <li>
                                    <i class="ri-check-double-line"></i> Regaular walking and out door activities done on daily basis
                                </li>
                                <li>
                                    <i class="ri-check-double-line"></i> Vet on call is a plus point
                                </li>
                                <li>
                                    <i class="ri-check-double-line"></i> Every day Picture of your Pet is sent twice a day thorugh Whats app
                                </li>
                                <li>
                                    <i class="ri-check-double-line"></i> Affordable rates
                                </li>
                                <li>
                                    <i class="ri-check-double-line"></i> Pick up and drop facility is also available
                                </li>
                            </ul>
                        </p>
                    </div>
                </div>

            </div>

        </div>
    </section><!-- End Services Section -->

    @if (Model.Count > 0)
    {
<section id="portfolio" class="portfolio">
    <div class="container">

        <div class="section-title" data-aos="fade-up">
            <h2>Gallery</h2>
        </div>

        <div class="row portfolio-container" data-aos="fade-up" data-aos-delay="400">
            @foreach (var item in Model)
            {
                <div class="col-lg-6 col-md-6 portfolio-item">
                    <div class="portfolio-wrap">
                        <img src="~/Images/Gallery/@item.ImgURL" class="img-fluid" alt="">
                        <div class="portfolio-info">
                            <div class="portfolio-links text-center">
                                <a href="~/Images/Gallery/@item.ImgURL" data-gall="portfolioGallery" class="venobox"><i class="bx bx-plus"></i> View</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
    }
    

</main><!-- End #main -->