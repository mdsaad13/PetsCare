@model List<MaxsPetCare.Models.Training>
@{
    ViewBag.Title = "My Training";
    ViewBag.Active_Mys = "active";
    ViewBag.Active_MyTraining = "active";
}

<main class="main">
    <section id="contact" class="contact">
        <div class="container">

            <div class="section-title" data-aos="fade-up">
                <h2>@ViewBag.Title</h2>
            </div>

            <div class="row">
                <div class="table-responsive">
                    <div class="col-lg-12 col-md-12" data-aos="fade-up" data-aos-delay="300">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Package Details</th>
                                    <th scope="col">Pet Type</th>
                                    <th scope="col">Pet Breed</th>
                                    <th scope="col">Pickup Address</th>
                                    <th scope="col">Pickup Date</th>
                                    <th scope="col">Request Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int i = 1;
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <th scope="row">@i</th>
                                            <td>@item.PackageDetails.Name</td>
                                            <td>@((item.PackageDetails.Type == 1) ? "Cat" : "Dog")</td>
                                            <td>@item.PetBreed</td>
                                            <td>@item.PickUpAddress</td>
                                            <td>@item.PickUpDate.ToLongDateString()</td>
                                            <td>@item.DateTime.ToLongDateString()</td>
                                        </tr>
                                        i++;
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

