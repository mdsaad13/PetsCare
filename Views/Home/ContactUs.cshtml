@model MaxsPetCare.Models.ContactUs
@{
    ViewBag.Title = "Contact Us";
}

<main class="main">
    <!-- ======= Contact Section ======= -->
    <section id="contact" class="contact">
        <div class="container">

            <div class="section-title" data-aos="fade-up">
                <h2>@ViewBag.Title</h2>
            </div>

            <div class="row">
                <div class="col-lg-4 col-md-6" data-aos="fade-right" data-aos-delay="100">
                    <div class="contact-about">
                        <h3>@AppInfo.AppName</h3>
                        <div class="info">
                            <div>
                                <i class="ri-map-pin-line"></i>
                                <p>
                                    @Html.Raw(AppInfo.Address)
                                </p>
                            </div>

                            <div>
                                <i class="ri-mail-send-line"></i>
                                <p>@AppInfo.Email</p>
                            </div>

                            <div>
                                <i class="ri-phone-line"></i>
                                <p>@AppInfo.Mobile</p>
                            </div>

                        </div>
                        <div class="social-links">
                            <a href="@AppInfo.Twitter" class="twitter"><i class="icofont-twitter"></i></a>
                            <a href="@AppInfo.Facebook" class="facebook"><i class="icofont-facebook"></i></a>
                            <a href="@AppInfo.Instagram" class="instagram"><i class="icofont-instagram"></i></a>
                            <a href="@AppInfo.Linkedin" class="linkedin"><i class="icofont-linkedin"></i></a>
                        </div>
                    </div>
                </div>

                <div class="col-lg-8 col-md-12" data-aos="fade-left" data-aos-delay="100">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                    <div class="form-group">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter your name" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "error" })
                    </div>
                    <div class="form-group">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter your email" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "error" })
                    </div>
                    <div class="form-group">
                        @Html.EditorFor(model => model.Mobile, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter your phone number" } })
                        @Html.ValidationMessageFor(model => model.Mobile, "", new { @class = "error" })
                    </div>
                    <div class="form-group">
                        @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter subject" } })
                        @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "error" })
                    </div>
                    <div class="form-group">
                        @Html.TextAreaFor(model => model.Message, new { @class = "form-control", @placeholder = "Enter your query....", @rows = "5" })
                        @Html.ValidationMessageFor(model => model.Message, "", new { @class = "error" })
                    </div>
                        <div class="text-center mt-3">
                            <button type="submit" class="btn btn-primary">Send Message</button>
                        </div>
                    }
                </div>

            </div>

        </div>
    </section><!-- End Contact Section -->
</main>