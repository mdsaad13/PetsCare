@model MaxsPetCare.Models.Gallery
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Add Gallery Image";
    ViewBag.Active_Gallery = "active";
}

<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="card ">
            <div class="card-header">
                <div class="row">
                    <div class="col-12">
                        <h3>@ViewBag.Title</h3>
                        <hr />
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-6">
                        @using (Html.BeginForm("AddGalleryImage", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-group">
                                <div class="custom-file">
                                    @Html.TextBoxFor(model => model.Image, new { type = "file", @class = "custom-file-input", @id = "customFile" })
                                    <label class="custom-file-label" for="customFile">Choose file</label>
                                </div>
                                @Html.ValidationMessageFor(model => model.Image, "", new { @class = "error" })
                            </div>

                            <div class="text-center mt-3 mb-4">
                                <button type="submit" class="btn btn-primary btn-block btn-lg">Submit</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

