@model List<MaxsPetCare.Models.Gallery>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Gallery Images";
    ViewBag.Active_Gallery = "active";
}

<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="card ">
            <div class="card-header">
                <div class="row">
                    <div class="col-6">
                        <h3>@ViewBag.Title</h3>
                    </div>
                    <div class="col-6 text-right">
                        <a class="btn btn-primary" href="@Url.Action("AddGalleryImage")">Add New</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table tablesorter " id="">
                        <thead class=" text-primary">
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Action
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int i = 1;
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@i</td>
                                        <td>
                                            <img src="~/Images/Gallery/@item.ImgURL" height="200" />
                                        </td>
                                        <td>
                                            <button class="btn btn-sm btn-danger" onclick="ConfirmAction('@Url.Action("DeleteGalleryImg", new { ID = item.ID })')">Delete</button>
                                        </td>
                                    </tr>
                                    i++;
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        function ConfirmAction(url) {
            if (confirm("Are you sure?")) {
                window.location.replace(url);
            }
            return false;
        }
    </script>
}